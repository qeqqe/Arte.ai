{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/auth/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/auth/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/auth",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "dtos": {
      "type": "library",
      "root": "libs/dtos",
      "entryFile": "index",
      "sourceRoot": "libs/dtos/src",
      "compilerOptions": {
        "tsConfigPath": "libs/dtos/tsconfig.lib.json"
      }
    },
    "ingestion": {
      "type": "application",
      "root": "apps/ingestion",
      "entryFile": "main",
      "sourceRoot": "apps/ingestion/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ingestion/tsconfig.app.json"
      }
    },
    "analysis": {
      "type": "application",
      "root": "apps/analysis",
      "entryFile": "main",
      "sourceRoot": "apps/analysis/src",
      "compilerOptions": {
        "tsConfigPath": "apps/analysis/tsconfig.app.json"
      }
    },
    "nlp-service": {
      "type": "application",
      "root": "apps/nlp-service",
      "entryFile": "main",
      "sourceRoot": "apps/nlp-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nlp-service/tsconfig.app.json"
      }
    }
  }
}